# Prerender Environment Variables Configuration
# Copy this file to .env and adjust values as needed

# Redis connection URL
REDIS_URL=redis://valkey:6379

# Cache expiration time in seconds
# Default: 604800 (7 days)
# Set to 0 for no expiration
PAGE_TTL=604800

# Maximum number of concurrent rendering processes (different URLs)
# Default: 10
# Increase if you have more CPU/memory resources
# Decrease if running on limited resources
MAX_CONCURRENT_RENDERS=10

# Lock timeout in seconds
# Default: 30
# How long to hold the lock for preventing duplicate renders of the same URL
# Should be longer than expected page load time
LOCK_TTL=30

# Disable image loading for faster rendering
# Default: false
# Set to 'true' to skip loading images (2-5x faster)
# Recommended for SEO/crawler use cases where images are not needed
DISABLE_IMAGES=false
